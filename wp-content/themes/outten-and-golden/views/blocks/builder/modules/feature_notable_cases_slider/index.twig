<section class="relative bg-white-smoke">
    {# <pre>{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre> #}

    <div class="site-max py-60" data-component="slider(js-slides)">
        <div class="site-grid">
            <div class="relative col-span-full col-start-1 flex items-end justify-between pb-60">
                <div class="relative s:max-w-[50rem] flex flex-col items-start space-y-40">
                    <div class="relative">
                        <p class="text-grey text-12 font-medium leading-none tracking-[0.12rem] uppercase">{{ item.subtitle }}</p>
                    </div>

                    <div class="relative">
                        <h2 class="text-green font-sans text-24 s:text-40 font-normal leading-[1.16] tracking-[-0.04rem]">{{ item.title }}</h2>
                    </div>
                </div>

                <div class="relative flex">
                    <button class="relative flex items-center justify-center w-45 h-45 border-[0.1rem] border-r-0 border-grey-taupe border-solid" type="button" data-slider-prev>
                        <span class="inline-flex">
                            <svg class="w-7 h-auto" viewBox="0 0 7 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.75 10L1.25 5.5L5.75 1" stroke="#1E383E" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                    </button>

                    <button class="relative -ml-2 flex items-center justify-center w-45 h-45 border-[0.1rem] border-grey-taupe border-solid" type="button" data-slider-next>
                        <span class="inline-flex">
                            <svg class="w-7 h-auto" viewBox="0 0 7 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1.25 1L5.75 5.5L1.25 10" stroke="#1E383E" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                    </button>
                </div>
            </div>

            <div class="relative col-span-full col-start-1">
                <div class="relative select-none cursor-grab w-full js-slides" data-slider>
                    <ul class="slider-container flex relative z-1">
                        {% for item in item.notable_cases_slider %}
                            <li class="relative p-24 min-w-[55rem] max-w-[55rem] min-h-[40rem] max-h-[40rem] bg-grey-taupe mr-24 {{ loop.last ? '!mr-0' }} js-slide">
                                <div class="font-disp text-green text-24 font-normal leading-[1.15] tracking-[-2%]">
                                    {{ item.title }}
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>