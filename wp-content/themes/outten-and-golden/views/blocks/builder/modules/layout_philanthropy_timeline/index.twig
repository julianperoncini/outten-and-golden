                            <p class="text-16 leading-[1.32] text-center">{{ item.card.content.card_text }}</p>
                            <a href="{{ item.card.content.card_link.url }}" class="flex items-center justify-center gap-8 font-medium text-12 leading-none tracking-[0.1rem] text-center uppercase">
