<section class="relative js-st-hero">

    <div class="site-max h-screen flex sticky top-0 left-0 w-full h-full items-center justify-center js-t-text">
        <div class="mx-auto">
            <div class="relative pb-95 flex flex-col items-center justify-center space-y-40 mx-auto s:sticky top-250">
                {% if item.subtitle %}
                    <div class="relative">
                        <h5 class="text-grey text-12 font-medium leading-none tracking-[0.12rem] uppercase">{{ item.subtitle }}</h5>
                    </div>
                {% endif %}

                {% if item.title %}
                    <div class="relative s:max-w-[50rem] l:max-w-[102.6rem]">
                        <h1 class="text-center text-32 s:text-40 l:text-76 font-normal leading-[1.1] tracking-[-0.152rem] text-green">{{ item.title }}</h1>
                    </div>
                {% endif %}

                {% if item.link %}
                    <div class="relative">
                        <a class="relative inline-flex items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] text-white py-15 px-25 bg-green uppercase" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="fixed w-full top-0 flex items-center justify-center h-screen js-t-screen">
        <div class="w-full h-full [clip-path:inset(0_0_0_0_round_1.4rem)] s:[clip-path:inset(0_0_0_0_round_3.2rem)] l:[clip-path:inset(0_0_0_0_round_6.4rem)] mx-auto w-full js-t-hero sticky top-0">
            <div class="relative h-full flex items-center justify-center js-t-hero-content">
                {% include "blocks/common/image.twig" with {
                    props : {
                        data: {
                            image : item.image
                        },
                        options: {
                            container_class: 'w-full h-full overflow-hidden',
                            class : 'w-full h-full object-cover',
                            aspect_ratio: '76.38%',
                        }
                    }
                } %}
            </div>
        </div>
    </div>

    <div class="h-[200vh] w-full"></div>

</section>