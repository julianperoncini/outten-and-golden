<section class="relative bg-white">
    {# <pre>{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre> #}

    <div class="site-max py-160">
        <div class="site-grid">
            <div class="relative col-start-1 col-span-7 space-y-40 pb-95">
                <div class="relative">
                    <h5 class="text-grey text-12 font-medium leading-none tracking-[0.12rem] uppercase">{{ item.subtitle }}</h5>
                </div>

                <div class="relative">
                    <h2 class="text-green text-40 font-normal leading-[1.16] tracking-[-0.04rem]">{{ item.title }}</h2>
                </div>

                <div class="relative">
                    <div class="relative flex">
                        <button class="relative flex items-center justify-center w-45 h-45 border-[0.1rem] border-r-0 border-grey-taupe border-solid" type="button">
                            <span class="inline-flex">
                                <svg class="w-7 h-auto" viewBox="0 0 7 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M5.75 10L1.25 5.5L5.75 1" stroke="#1E383E" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </span>
                        </button>

                        <button class="relative -ml-2 flex items-center justify-center w-45 h-45 border-[0.1rem] border-grey-taupe border-solid" type="button">
                            <span class="inline-flex">
                                <svg class="w-7 h-auto" viewBox="0 0 7 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1.25 1L5.75 5.5L1.25 10" stroke="#1E383E" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="relative col-start-1 col-span-full">
                <div class="relative select-none cursor-grab w-full js-slides" data-component="slider(js-slides)">
                        <ul class="slider-container flex gap-x-95 relative z-1">
                            {% for item in item.logos %}
                                <li class="slider-item-logo relative min-w-[15rem] max-w-[15rem] js-slide">
                                    <figure class="relative overflow-hidden w-full">
                                        {% include "blocks/common/image.twig" with {
                                            props : {
                                                data: {
                                                    image : item.image
                                                },
                                                options: {
                                                    container_class: 'w-full h-full overflow-hidden select-none pointer-events-none',
                                                    class : 'w-full h-full object-contain select-none pointer-events-none',
                                                    aspect_ratio: '100%',
                                                }
                                            }
                                        } %}
                                    </figure>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>