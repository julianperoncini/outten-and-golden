<section class="relative bg-green-lemon">
    {# <pre>{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre> #}

    <div class="site-max py-32">
        <div class="site-grid gap-y-60">
            <div class="col-span-16 l:col-span-9 flex flex-col items-start gap-y-40 justify-between">
                <div class="relative flex flex-col items-start gap-y-40">
                    {% if item.subtitle %}
                        <div class="relative">
                            <h5 class="font-sans text-grey text-12 font-medium leading-none tracking-[0.12rem] uppercase">{{ item.subtitle }}</h5>
                        </div>
                    {% endif %}

                    {% if item.title %}
                        <div class="relative">
                            <h1 class="text-26 s:text-32 l:text-48 font-normal leading-[1.12] tracking-[-0.096rem] text-green">{{ item.title }}</h1>
                        </div>
                    {% endif %}
                </div>

                <div class="relative">
                    {% if item.link %}
                        <a class="relative inline-flex space-x-8 items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] text-green-lemon py-15 px-25 bg-black uppercase" href="{{ item.link.url }}" target="{{ item.link.target }}">
                            <span class="inline-flex">
                                {{ item.link.title }}
                            </span>
                            <span class="inline-flex">
                                <svg class="w-8 h-11" viewBox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <g clip-path="url(#clip0_5001_23171)">
                                        <path d="M1.73438 1L6.23438 5.5L1.73438 10" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                    </g>
                                    <defs>
                                        <clipPath id="clip0_5001_23171">
                                            <rect width="7" height="11" fill="currentColor" transform="translate(0.734375)"/>
                                        </clipPath>
                                    </defs>
                                </svg>
                            </span>
                        </a>
                    {% endif %}
                </div>
            </div>

            <div class="l:col-start-11 col-span-16 l:col-span-6">
                <figure class="relative w-full h-full">
                    {% include "blocks/common/image.twig" with {
                        props : {
                            data: {
                                image : item.image
                            },
                            options: {
                                container_class: 'w-full h-full overflow-hidden',
                                class : 'w-full h-full object-cover',
                                aspect_ratio: '135%',
                            }
                        }
                    } %}
                </figure>
            </div>
        </div>
    </div>
</section>