<section class="relative bg-white">
    {# <pre>{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre> #}

    <div class="site-max py-80 s:py-160">
        <div class="site-grid space-y-60 s:space-y-120">
            {% for card in item.cards_stack %}
                <article class="col-span-full col-start-1">
                    <div class="site-grid">
                        <div class="col-span-full s:col-span-7 flex flex-col items-start justify-between gap-y-24 s:gap-y-20 pb-40 s:pb-0">
                            <div class="relative space-y-32">
                                <h2 class="text-grey font-sans text-12 font-medium leading-none tracking-[0.12rem] uppercase">{{ card.subtitle }}</h2>
                                <h3 class="text-24 s:text-40 font-normal leading-[1.16] tracking-[-0.04rem] text-green">{{ card.title }}</h3>
                            </div>
                            
                            <div class="relative text-green">
                                <div class="text-16 font-normal leading-[1.32]">{{ card.description }}</div>
                            </div>
                        </div>

                        <div class="relative s:col-start-9 col-span-full s:col-span-8">
                            {% include "blocks/common/image.twig" with {
                                props : {
                                    data: {
                                        image : card.image
                                    },
                                    options: {
                                        container_class: 'w-full h-full overflow-hidden',
                                        class : 'w-full h-full object-cover',
                                        aspect_ratio: '103%',
                                        aspect_ratio_mobile: '151%',
                                    }
                                }
                            } %}
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
</section>