{% set text_color_map = {
    'grey': 'text-grey-taupe',
    'black': 'text-grey-taupe',
    'yellow': 'text-black',
    'green': 'text-white-smoke'
} %}

{% set bg_color = item.background_color|lower %}
{% set text_color = text_color_map[bg_color] %}

<section class="relative {{ bg_color ? 'bg-' ~ bg_color : 'bg-grey' }}" data-component="highlight">
    <div class="site-max py-60 s:py-120">
        <div class="site-grid gap-y-32 s:gap-y-40">
            {# <pre>{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre> #}

            <div class="relative flex flex-col gap-y-40 col-span-full s:col-start-2 s:col-span-14">
                <h2 class="{{ text_color ? text_color : 'text-grey-taupe' }} font-sans text-12 font-medium leading-none tracking-[0.12rem] uppercase">{{ item.subtitle }}</h2>
                <div class="relative">
                    <h3 class="h2 {{ text_color ? text_color : 'text-white-smoke' }} font-disp text-26 s:text-48 font-normal leading-[1.2] tracking-[-0.096rem]" data-highlight-text>{{ item.title }}</h3>
                </div>
            </div>

            {% if item.link %}
                <div class="relative col-span-full s:col-start-2 s:col-span-3">
                    <a class="relative inline-flex space-x-8 items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] text-grey py-15 px-25 bg-white-smoke uppercase" href="{{ item.link.url }}" target="{{ item.link.target }}">
                        <span class="inline-flex">
                            {{ item.link.title }}
                        </span>
                        <span class="inline-flex">
                            <svg class="w-8 h-11" viewBox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <g clip-path="url(#clip0_5001_23171)">
                                    <path d="M1.73438 1L6.23438 5.5L1.73438 10" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                </g>
                                <defs>
                                    <clipPath id="clip0_5001_23171">
                                        <rect width="7" height="11" fill="white" transform="translate(0.734375)"/>
                                    </clipPath>
                                </defs>
                            </svg>
                        </span>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</section>