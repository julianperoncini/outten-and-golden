{% set hero = props.hero %}

{% set text_color_map = {
    'grey': 'text-grey-taupe',
    'black': 'text-grey-taupe',
    'yellow': 'text-black',
    'green': 'text-white-smoke'
} %}

{% set text_color = text_color_map[bg_color]|default('text-grey') %}

<section class="relative">
    <div class="site-max pt-65 s:pt-135 pb-32 s:pb-160 site-grid">
        
            <div class="s:col-start-3 col-span-full s:col-span-12">
                <div class="relative w-full flex flex-col items-center justify-center space-y-32 s:space-y-40">
                    {% if hero.subtitle %}
                        <p class="text-center s:text-left text-grey text-12 font-medium leading-none tracking-[0.1em] uppercase">
                            {{ hero.subtitle }}
                        </p>
                    {% endif %}
                    
                    {% if hero.title %}
                        <h2 class="text-green text-center text-56 s:text-[12.0rem] font-normal leading-[0.88] tracking-[-0.24rem]">
                            {{ hero.title }}
                        </h2>
                    {% endif %}
                    
                    {% if hero.description %}
                        <div class="s:max-w-[40.5rem] text-green text-center text-16 font-normal leading-[1.32] px-12 s:px-0">
                            {{ hero.description }}
                        </div>
                    {% endif %}
                </div>
            </div>
        
    </div>
</section>