{% set post = props.post %}
{% set feature_content = props.feature_content %}
{% set feature_post_link = props.feature_post_link %}

<section class="relative">
    <div class="site-max pb-32 s:pb-120">
        <div class="site-grid">
            <div class="col-span-full">
                <a class="relative block w-full" href="{{ feature_post_link }}">
                    <figure class="relative w-full h-full">
                        {% include "blocks/common/image.twig" with {
                            props : {
                                data: {
                                    image : feature_content.feature_image
                                },
                                options: {
                                    container_class: 'w-full h-full overflow-hidden',
                                    class : 'w-full h-full object-cover',
                                    aspect_ratio: '50%',
                                    aspect_ratio_mobile: '50%',
                                }
                            }
                        } %}
                    </figure>

                    <div class="absolute inset-0">
                        <div class="relative w-full h-full flex flex-col items-start justify-between p-32">
                            <div class="relative text-white font-sans text-12 font-medium leading-none tracking-[0.12rem] uppercase">
                                <p class="uppercase">Blogs</p>
                            </div>

                            <div class="relative flex flex-col space-y-[3.2rem] w-full">
                                <div class="relative flex gap-4">
                                    {% if feature_tags %}
                                        <div class="case-tags">
                                            {% for tag in feature_tags %}
                                                {% set tag_background_color = function('get_field', 'background_color', 'term_' ~ tag.term_id) %}
                                                {% include "/views/partials/category.twig" with {
                                                    data: {
                                                        text: tag.name,
                                                        bgColor: tag_background_color,
                                                    }
                                                } %}
                                            {% endfor %}
                                        </div>
                                    {% endif %}


                                </div>

                                <div class="relative flex flex-col s:flex-row items-end justify-between">
                                    <h3 class="s:max-w-[45%] text-40 font-normal leading-[1.15] tracking-[-1%] text-white">{{ feature_content.title }}</h3>

                                    <div class="relative">
                                        <button class="relative font-sans text-white inline-flex space-x-8 items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] uppercase" type="button" aria-label="See more">
                                            <span class="inline-flex">
                                                See more
                                            </span>
                                            <span class="inline-flex">
                                                <svg class="w-8 h-11" viewBox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                    <path d="M1.73438 1L6.23438 5.5L1.73438 10" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                                </svg>
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</section>