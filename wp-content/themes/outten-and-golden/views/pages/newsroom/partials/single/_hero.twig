{% set text_color_map = {
    'grey': 'text-grey-taupe',
    'black': 'text-grey-taupe',
    'yellow': 'text-black',
    'green': 'text-white-smoke'
} %}

{% set bg_color = post.feature_content.background_color|lower %}
{% set text_color = text_color_map[bg_color] %}

<section class="relative">
    <div class="relative h-full s:h-[100dvh] max-h-[calc(100vh-11rem)] s:max-h-[calc(100vh-12rem)]">
        <div class="relative p-32 w-full h-full flex flex-col items-start justify-between {{ text_color }} bg-{{ post.feature_content.background_color|lower}}">
            <div class="relative flex items-start gap-4">
                {% for item in categories %}
                    {% include "/views/partials/tag.twig" with {
                        data: {
                            text: item.name,
                        }
                    } %}
                {% endfor %}
            </div>

            <div class="relative">
                <div class="relative font-disp font-normal text-56 leading-[1.1] tracking-[-2%]">
                    {{ post.feature_content.title }}
                </div>
            </div>
        </div>
    </div>
</section>