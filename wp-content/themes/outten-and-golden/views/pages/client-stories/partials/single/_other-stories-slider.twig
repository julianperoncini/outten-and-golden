<section class="relative bg-white overflow-hidden">
    {# <pre>{{ item|json_encode(constant('JSON_PRETTY_PRINT')) }}</pre> #}
    
    <div class="site-max site-grid pt-60 s:pt-120 pb-60 s:pb-95 border-t border-solid border-grey-taupe">
        <div class="relative col-start-1 col-span-8 space-y-40 pb-32 s:pb-40">
            <div class="relative">
                <h2 class="text-grey text-center s:text-left text-12 font-sans font-medium leading-none tracking-[0.12rem] uppercase">Client Story</h2>
            </div>
            <div class="relative s:max-w-[102.6rem] mx-auto">
                <h3 class="h3 text-center s:text-left text-24 s:text-40 font-normal leading-[1.16] tracking-[-0.04rem] text-green">See Other Stories</h3>
            </div>
        </div>

        <div class="relative col-start-1 col-span-full">
            <div class="flex items-center justify-between">
                <div class="relative hidden s:flex">
                    <button class="relative flex items-center justify-center w-45 h-45 border-[0.1rem] border-r-0 border-grey-taupe border-solid js-slider-team-prev" type="button">
                        <span class="inline-flex">
                            <svg class="w-7 h-auto" viewBox="0 0 7 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M5.75 10L1.25 5.5L5.75 1" stroke="#1E383E" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                    </button>

                    <button class="relative -ml-2 flex items-center justify-center w-45 h-45 border-[0.1rem] border-grey-taupe border-solid js-slider-team-next" type="button">
                        <span class="inline-flex">
                            <svg class="w-7 h-auto" viewBox="0 0 7 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1.25 1L5.75 5.5L1.25 10" stroke="#1E383E" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                    </button>
                </div>

                <div class="relative flex s:block items-center justify-center w-full s:w-[inherit]">
                    <a class="relative inline-flex space-x-8 items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] text-white py-15 px-25 bg-green uppercase" href="/client-stories/">
                        <span class="inline-flex">See All</span>
                        <span class="inline-flex">
                            <svg class="w-8 h-11" viewBox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M1.73438 1L6.23438 5.5L1.73438 10" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
  
    <div class="site-max pb-60 s:pb-120 select-none">
        <div class="flex cursor-grab js-slider-team" data-component="sliderTeamMembers(js-slider-members)">
            {% for item in other_stories_slider %}
                {% set text_color_map = {
                    'grey': 'text-grey-taupe',
                    'black': 'text-grey-taupe',
                    'yellow': 'text-black',
                    'green': 'text-white-smoke'
                } %}

                {% set bg_color = item.feature_content.background_color|lower %}
                {% set text_color = text_color_map[bg_color] %}

                <article data-member="true" class="bg-{{ bg_color }} {{ text_color }} h-[50rem] relative max-w-[29rem] s:max-w-[44.3rem] min-w-[29rem] s:min-w-[44.3rem] mr-24 js-member-item">
                    <div class="relative flex flex-col items-start p-32 space-y-32">
                        <div class="relative flex items-start gap-4">
                            {% for cat in item.categories %}
                                {% include "/views/partials/tag.twig" with {
                                    data: {
                                        text: cat.name,
                                    }
                                } %}
                            {% endfor %}
                        </div>

                        <h3 class="font-disp font-normal text-32 leading-[1.2] tracking-[-2%]">{{ item.feature_content.title }}</h3>

                        <div class="font-normal text-16 leadin-[1.32] select-none">{{ item.feature_content.description }}</div>

                        <div class="relative flex s:block items-center justify-center w-full s:w-[inherit]">
                            <a class="relative inline-flex space-x-8 items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] py-15 uppercase" href="{{ item.link }}">
                                <span class="inline-flex">Read the full story</span>
                                <span class="inline-flex">
                                    <svg class="w-8 h-11" viewBox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M1.73438 1L6.23438 5.5L1.73438 10" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </span>
                            </a>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    </div>
</section>