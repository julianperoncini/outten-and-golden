{% set text_color_map = {
    'grey': 'text-grey-taupe',
    'black': 'text-grey-taupe',
    'yellow': 'text-black',
    'green': 'text-white-smoke'
} %}

{% set bg_color = post.feature_content.background_color|lower %}
{% set text_color = text_color_map[bg_color] %}

<section class="relative">
    <div class="relative h-auto s:h-full s:h-screen s:h-[100dvh]">
        <div class="relative p-20 s:p-32 w-full h-full flex flex-col items-start justify-between {{ text_color }} bg-{{ post.feature_content.background_color|lower}}">
            <div class="relative flex items-start gap-4">
                {% for item in categories %}
                    {% include "/views/partials/tag.twig" with {
                        data: {
                            text: item.name,
                        }
                    } %}
                {% endfor %}
            </div>

            <div class="relative pt-32 s:pt-0">
                <div class="relative font-disp font-normal text-32 s:text-56 leading-[1.1] tracking-[-2%]">
                    {{ post.feature_content.description }}
                </div>
            </div>
        </div>
    </div>
</section>