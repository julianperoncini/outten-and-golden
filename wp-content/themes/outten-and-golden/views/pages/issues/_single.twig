{% extends '_layout.twig' %}

{% block content %}
	<article data-taxi-view class="page-issue">
		<div class="app">
			{% include 'partials/breadcrumb.twig' %}
			
			{# Hero #}
			{% include 'pages/issues/partials/single/_hero.twig' with {
				props: {
					post: post
				}
			} %}

			{# WYSIWYG and Sticky Right Card #}
			{% include 'pages/issues/partials/single/_content.twig' with {
				props: {
					item: post.content_post
				}
			} %}

			{% include 'pages/issues/partials/single/_other-issues-slider.twig' %}

			{# Content Builder #}
			{% include 'blocks/builder/index.twig' with {
				props: {
					data: {
						items: post.content_builder
					}
				}
			} %}
		</div>

		{% include '_site-footer.twig' %}
	</article>
{% endblock %}