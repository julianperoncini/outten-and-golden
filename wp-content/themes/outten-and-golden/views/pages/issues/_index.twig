{% extends '_layout.twig' %}

{% block content %}
	<article data-taxi-view class="page-issues">
		<div class="app">
			{% include 'partials/breadcrumb.twig' %}
			
			{# Hero #}
			{% include 'pages/issues/partials/_hero.twig' with {
				props: {
					hero: hero
				}
			} %}

			{# All Posts Layout #}
			{% include 'pages/issues/partials/_all_posts.twig' with {
				props: {
					all_issues_layout: all_issues_layout,
					categories: categories
				}
			} %}

			{# Content Builder #}
			{% include 'blocks/builder/index.twig' with {
				props: {
					data: {
						items: content_builder.content_builder
					}
				}
			} %}
		</div>

		{% include '_site-footer.twig' %}
	</article>
{% endblock %}