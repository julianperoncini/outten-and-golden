{% if post.content_post.form_card.hide == false %}
    <div class="relative w-full">
        <div class="relative w-full flex flex-col items-start space-y-32 bg-white-smoke p-32">
            <div class="relative w-full space-y-32">
                <div class="relative flex w-full items-start">
                    <div class="relative space-y-[2.4rem]">
                        <h2 class="text-black font-normal text-40 leading-[1.15] tracking-[-1%]">{{ post.content_post.form_card.title }}</h2>
                    </div>
                </div>
            </div>

            <div class="relative w-full flex flex-col items-start pt-15">
                <form class="relative w-full space-y-32">
                    <div class="relative w-full flex items-start justify-between gap-32">
                        <div class="relative w-full">
                            <label for="state" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">State</label>
                            <input type="text" id="state" name="state" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>
                    </div>

                    <div class="relative w-full flex items-start justify-between gap-32">
                        <div class="relative w-1/2">
                            <label for="name" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">First Name*</label>
                            <input type="text" id="name" name="name" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>

                        <div class="relative w-1/2">
                            <label for="phone" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Phone Number</label>
                            <input type="number" id="phone" name="phone" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>
                    </div>

                    <div class="relative w-full flex items-start justify-between gap-32">
                        <div class="relative w-1/2">
                            <label for="email" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Email*</label>
                            <input type="email" id="email" name="email" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>

                        <div class="relative w-1/2">
                            <label for="title" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Title*</label>
                            <input type="text" id="title" name="title" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>
                    </div>

                    <div class="relative w-full">
                        <p class="font-normal text-12 leading-[1.4]">We take your privacy seriously. The personal information you provide to Outten & Golden is fully confidential and used expressly to assist you. For details, please view our <a class="uline-double" href="/privacy-policy">privacy policy</a>.</p>
                    </div>

                    <div class="relative w-full">
                        <div class="relative flex items-center space-x-8">
                            {# <input 
                                type="checkbox" 
                                id="privacy-agreement" 
                                class="w-16 h-16 bg-transparent border-grey-taupe border-solid border-[0.1rem] rounded-full"
                            > #}
                            <div class="cursor-pointer w-16 h-16 bg-transparent border-grey-taupe border-solid border-[0.1rem] rounded-full"></div>
                            <label for="privacy-agreement" class="text-12 font-normal leading-[1.4] text-green">
                                I agree to the 
                                <a href="/privacy-policy" class="uline-double">
                                    Privacy Policy
                                </a>
                                <span class="text-red-500">*</span>
                            </label>
                        </div>
                    </div>

                    <div>
                        <button class="relative inline-flex space-x-8 items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] text-white py-15 px-25 bg-green uppercase" type="submit" aria-label="Submit form">
                            <span class="inline-flex">Submit</span>
                            <span class="inline-flex">
                                <svg class="w-8 h-11" viewBox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1.73438 1L6.23438 5.5L1.73438 10" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endif %}