{% if post.feature_content.contact_form.hide == false %}
    <div class="relative w-full">
        <div class="relative w-full flex flex-col items-start space-y-32 bg-white-smoke p-32">
            <div class="relative w-full space-y-32">
                <div class="relative flex w-full items-start justify-between">
                    <div class="relative">
                        <div class="relative space-y-[2.4rem]">
                            <p class="text-grey text-12 font-medium leading-none tracking-[0.12rem] uppercase">Contact {{ post.feature_content.first_name }}</p>
                            <h2 class="text-black font-normal text-32 s:text-40 leading-[1.15] tracking-[-1%]">Need legal <em class="font-disp font-normal italic">advice</em>?</h2>
                        </div>
                    </div>

                    {% if post.feature_media.image %}
                        <div class="relative shrink-0 w-[9.9rem] h-[11.1rem]">
                            <figure class="relative w-full h-full">
                                {% include "blocks/common/image.twig" with {
                                    props : {
                                        data: {
                                            image : post.feature_media.image
                                        },
                                        options: {
                                            container_class: 'w-full h-full overflow-hidden',
                                            class : 'w-full h-full object-cover',
                                        }
                                    }
                                } %}
                            </figure>
                        </div>
                    {% endif %}
                </div>

                <div class="relative w-full gap-2 s:gap-0 flex flex-wrap s:flex-auto items-start s:items-center s:justify-between">
                    {% include "pages/team/partials/single/_contact-info.twig" %}
                </div>
            </div>

            <div class="relative w-full flex flex-col s:flex-row items-start justify-between border-t border-solid border-grey-taupe pt-32">
                <div class="relative pb-32 s:pb-0">
                    <p class="text-20 font-normal leading-[1.24] tracking-[-2%] font-disp"><em class="font-normal italic">Areas</em> of expertise:</p>
                </div>

                <div class="relative pl-12 s:pl-0">
                    <ul class="relative flex flex-col items-start space-y-10">
                        {% for item in post.feature_content.contact_form.areas_of_expertise %}
                            <li class="relative list-disc">
                                <p class="font-sans font-medium text-16 leading-[1.32]">{{ item.text }}</p>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>

            <div class="relative w-full flex flex-col items-start border-t border-solid border-grey-taupe pt-32">
                <div class="relative pb-50">
                    <p class="text-20 font-normal leading-[1.24] tracking-[-2%] font-disp">Have a <em class="font-normal italic">question</em> or need <em class="font-normal italic">legal advice</em>?</p>
                </div>

                {% if post.feature_content.contact_form.contact_form_id %}
                    {{ function('do_shortcode', '[gravityform id="'~ post.feature_content.contact_form.contact_form_id ~'" title="false" description="false" ajax="true"]') }}
                {% endif %}

                {#
                <form class="relative w-full space-y-32">
                    <div class="relative w-full flex flex-col s:flex-row items-start justify-between gap-32">
                        <div class="relative w-full s:w-1/2">
                            <label for="name" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">First Name*</label>
                            <input type="text" id="name" name="name" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>

                        <div class="relative w-full s:w-1/2">
                            <label for="lastname" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Last Name*</label>
                            <input type="text" id="lastname" name="lastname" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>
                    </div>

                    <div class="relative w-full flex flex-col s:flex-row items-start justify-between gap-32">
                        <div class="relative w-full s:w-1/2">
                            <label for="phone" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Phone Number</label>
                            <input type="number" id="phone" name="phone" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>

                        <div class="relative w-full s:w-1/2">
                            <label for="email" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Email*</label>
                            <input type="email" id="email" name="email" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>
                    </div>

                    <div class="relative w-full flex items-start justify-between gap-32">
                        <div class="relative w-full">
                            <label for="company-employer" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Company / Employer</label>
                            <input type="text" id="company-employer" name="company-employer" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40">
                        </div>
                    </div>

                    <div class="relative w-full">
                        <p class="font-normal text-12 leading-[1.4]">We take your privacy seriously. The personal information you provide to Outten & Golden is fully confidential and used expressly to assist you. For details, please view our <a class="uline-double" href="/privacy-policy">privacy policy</a>.</p>
                    </div>

                    {% if post.feature_content.contact_form.schedule %}
                        <div class="relative">
                            <div class="relative">
                                <a class="relative inline-flex items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] text-white py-15 px-25 bg-green uppercase" href="{{ post.feature_content.contact_form.schedule }}" target="_blank">Schedule a callback</a>
                            </div>
                        </div>
                    {% endif %}

                    <div class="relative w-full flex items-start justify-between gap-32 pt-12">
                        <div class="relative w-full">
                            <label for="message" class="absolute -top-16 left-0 text-16 font-normal leading-[1.32] text-green">Please briefly tell us why you're reaching out to us today</label>
                            <textarea name="message" id="message" class="relative w-full text-16 font-normal leading-[1.32] text-green !border-b border-solid border-grey-taupe placeholder:text-green placeholder:-top-40"></textarea>
                        </div>
                    </div>

                    <div class="relative w-full">
                        <div class="relative flex items-center space-x-8">
                            <div class="cursor-pointer w-16 h-16 bg-transparent border-grey-taupe border-solid border-[0.1rem] rounded-full"></div>
                            <label for="privacy-agreement" class="text-12 font-normal leading-[1.4] text-green">
                                I agree to the 
                                <a href="/privacy-policy" class="uline-double">
                                    Privacy Policy
                                </a>
                                <span class="text-red-500">*</span>
                            </label>
                        </div>
                    </div>

                    <div>
                        <button class="relative inline-flex space-x-8 items-center justify-center text-12 font-medium leading-none tracking-[0.12rem] text-white py-15 px-25 bg-green uppercase" type="submit" aria-label="Submit form">
                            <span class="inline-flex">Submit</span>
                            <span class="inline-flex">
                                <svg class="w-8 h-11" viewBox="0 0 8 11" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1.73438 1L6.23438 5.5L1.73438 10" stroke="currentColor" stroke-width="1.3" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                            </span>
                        </button>
                    </div>
                </form>
                #}
            </div>
        </div>
    </div>
{% endif %}